{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./src",
    "target": "ES2020",
    "lib": [
      "ES2022",
      "es2020",
      "ESNext",
      "dom",
    ],
    // "types": [
    //   "node",
    //   "passport" 
    // ],
    "typeRoots": [
      "./types"
    ],
    "isolatedModules": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "allowUmdGlobalAccess": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "tsc-watch": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
}